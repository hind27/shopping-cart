{{#if userCart}}
    <div style="padding-top: 30px;">
    <table class="table table-bordered">
        <thead>
            <tr class="table-active">
                <th scope="col" class="text-center">#</th>
                <th scope="col" class="text-center">Product Name</th>
                <th scope="col" class="text-center">Product Quantity</th>
                <th scope="col" class="text-center">Product Price</th>
                <th scope="col" class="text-center">delete</th>
            </tr>
        </thead>
        <tbody>
            {{#each userCart.selectedProduct as  |val index|  }}

            <tr>
                <th scope="row" class="text-center">{{add @index}}</th>
                <td class="text-center">{{val.name}}
                </td>
                <td class="text-center">
                    {{#if (checkQuantity @val.quantity)}}
                    <a href="/decreaseProduct/{{index}}" class="btn disabled" style="margin-right: 30px;"><i class="fas fa-minus-square"></i></a>

                    {{else}}
                    <a href="/decreaseProduct/{{index}}" class="btn" style="margin-right: 30px;"><i class="fas fa-minus-square"></i></a>
                    {{/if}}

                    {{val.quantity}}
                    <a href="/increaseProduct/{{index}}" class="btn" style="margin-left: 30px;"><i class="fas fa-plus-square"></i></a></td>
                <td class="text-center">{{val.price}}</td>
                <td class="text-center"> <a href="/deleteProduct/{{index}}" class="btn btn-danger ">delete <i class="far fa-trash-alt"></i></a></td>
            </tr>
            {{/each}}

            <tr class="table-primary">
                <td colspan="3" style="font-weight: bold;" class="text-center">Total price</td>
                <td> ${{userCart.totalPrice}}</td>
            </tr>
        </tbody>

    </table>
</div>
<div  class="text-center">
<a href="/checkout" class="btn btn-success" style="width: 200px;" > Check Out
</a> </div>
{{else}}

   <h1  class="text-center" style="padding-top :200px">Your shopping is empty</h1> 
{{/if}}

